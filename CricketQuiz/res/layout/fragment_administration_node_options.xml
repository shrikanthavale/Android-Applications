<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdministrationNodeList$NodeOptionsFragment"
    android:id="@+id/administrationFragmentNodeOptionsID" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="1dp"
        android:orientation="horizontal" 
        android:layout_weight="2">

        <Button
            android:id="@+id/adminOptionAbutton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/customer_button_background"
            android:text="@string/optionAButtonText" 
            android:enabled="false"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/adminOptionBbutton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/customer_button_background"
            android:text="@string/optionBButtonText"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/adminOptionCbutton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/customer_button_background"
            android:text="@string/optionCButtonText"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/adminOptionDbutton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/customer_button_background"
            android:text="@string/optionDButtonText"
            android:layout_weight="0.5" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip" 
        android:layout_weight="11">

        <LinearLayout
            android:id="@+id/optionALayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_description_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionADescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false" 
                    android:padding="2dp"/>
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_evaluation_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionAEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false"
                    android:padding="2dp" />
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_amount_associated_label" />

            <EditText
                android:id="@+id/adminOptionAMoney"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/customer_button_background"
                android:gravity="top"
                android:inputType="number"
                android:lines="2"
                android:singleLine="false" 
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionBLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_description_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionBDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false"
                    android:padding="2dp" />
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_evaluation_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionBEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false" 
                    android:padding="2dp"/>
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_amount_associated_label" />

            <EditText
                android:id="@+id/adminOptionBMoney"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/customer_button_background"
                android:gravity="top"
                android:inputType="number"
                android:lines="1"
                android:singleLine="false"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionCLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_description_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionCDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false"
                    android:padding="2dp" />
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_evaluation_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionCEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false" 
                    android:padding="2dp"/>
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_amount_associated_label" />

            <EditText
                android:id="@+id/adminOptionCMoney"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/customer_button_background"
                android:gravity="top"
                android:inputType="number"
                android:lines="1"
                android:singleLine="false"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionDLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_description_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionDDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false" 
                    android:padding="2dp"/>
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_evaluation_label" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/adminOptionDEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer_button_background"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:singleLine="false" 
                    android:padding="2dp"/>
            </ScrollView>

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/administration_option_amount_associated_label" />

            <EditText
                android:id="@+id/adminOptionDMoney"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/customer_button_background"
                android:gravity="top"
                android:inputType="number"
                android:lines="1"
                android:singleLine="false" 
                android:padding="2dp"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" 
        android:layout_weight="2">

        <Button
            android:id="@+id/adminCancelChangesButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/CancelButtonText" />

        <Button
            android:id="@+id/adminSaveChangesButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/SaveButtonText" />
    </LinearLayout>

</LinearLayout>