<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CaseStudyDescriptionActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:text="@string/caseStudySummary"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:layout_weight="1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dp"
        android:background="@drawable/customer_button_background"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="2dp"
        android:rowCount="3"
        android:layout_weight="3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/customerHeading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/colonstring" />

        <TextView
            android:id="@+id/customerValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/customerTitleHeading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/colonstring" />

        <TextView
            android:id="@+id/customerCaseStudyTitleValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:text="@string/customerOrganizationHeading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:text="@string/colonstring" />

        <TextView
            android:id="@+id/customerCaseStudyOrganizationValue"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:text="@string/caseStudyDescription"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" 
        android:layout_weight="1"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/customer_button_background"
        android:padding="2dp"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/questionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scrollbars="vertical" />
    </ScrollView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal" 
        android:layout_weight="2">

        <Button
            android:id="@+id/backPlayFromActivityDescription"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/BackPlayArea" />

        <Button
            android:id="@+id/optionsNavigate"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/OptionsButtonText" />
    </LinearLayout>

</LinearLayout>